doctype html
html
  head
    title Detalles del Usuario
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
  body
    .container
      h1 Detalles del Usuario
      if user
        p
          strong Nombre Completo:
          | #{user.fullname}
        p
          strong Username:
          | #{user.username}
        p
          strong Role:
          | #{user.role}
      else
        p Usuario no encontrado
    a.btn.btn-primary(href='/users') Volver a la lista de usuarios
